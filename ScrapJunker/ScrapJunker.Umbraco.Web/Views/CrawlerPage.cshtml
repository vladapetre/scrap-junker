@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using ContentModels = Umbraco.Web.PublishedContentModels
@{
    Layout = "MasterPage.cshtml";
}

@section Styles{

    <link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/css/bootstrap.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    <style>
        .clickable-row {
            cursor: pointer
        }
    </style>
}

<label>Token: </label> @Model.Content.GetPropertyValue("token")
<div>
    @Model.Content.GetPropertyValue("content")
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Crawled Pages
            </div>
            <div class="card-block">
                <table id="descendants" class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Page Title</th>
                            <th>Page Url</th>
                            <th>Is Root</th>
                            <th>Keep Until</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var descendant in @Model.Content.Descendants())
                        {
                            <tr class='clickable-row' data-href='@(descendant.Url)'>
                                <td>@descendant.Name</td>
                                <td>@descendant.GetPropertyValue("absoluteUri")</td>
                                <td>@descendant.GetPropertyValue("isRoot")</td>
                                <td>@descendant.GetPropertyValue("keepUntil")</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!--/col-->
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#descendants').DataTable();

            $(".clickable-row").click(function () {
                window.location = $(this).data("href");
            });
        });
    </script>
}