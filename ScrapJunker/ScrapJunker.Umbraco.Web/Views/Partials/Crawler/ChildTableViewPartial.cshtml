@inherits Umbraco.Web.Mvc.UmbracoTemplatePage


@section Styles{

    <style>
        .clickable-row {
            cursor: pointer
        }
    </style>
}

<div class="card">
    <div class="card-header">
        <i class="fa fa-align-justify"></i> Crawled Pages
    </div>
    <div class="card-block">
        <table id="descendants" class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Page Title</th>
                    <th>Page Url</th>
                    <th>Is Root</th>
                    <th>Keep Until</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var descendant in @Model.Content.Descendants())
                {
                    <tr class='clickable-row' data-href='@(descendant.Url)' data-content='@(descendant.GetPropertyValue("content"))'>
                        <td>@descendant.Name</td>
                        <td>@descendant.GetPropertyValue("absoluteUri")</td>
                        <td>@descendant.GetPropertyValue("isRoot")</td>
                        <td>@descendant.GetPropertyValue("keepUntil")</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#descendants').DataTable();

            $(".clickable-row").click(function () {
                //window.location = $(this).data("href");
                $("#content").html($(this).data("content"));
            });

          
        });
    </script>
}